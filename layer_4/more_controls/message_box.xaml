<StackPanel x:Class="layer_4.more_controls.message_box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:layer_4.more_controls"
             mc:Ignorable="d"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom">
    <Border BorderBrush="DodgerBlue" BorderThickness="2,2,2,0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Width="120"
            CornerRadius="4,4,0,0" Padding="5" Background="White">
        <ListBox x:Name="lb" HorizontalContentAlignment="Center" BorderThickness="0">
            <d:ListBoxItem  Content="hello"></d:ListBoxItem>
            <d:ListBoxItem  Content="mohsen"></d:ListBoxItem>
        </ListBox>
    </Border>
    <Border BorderBrush="DodgerBlue" BorderThickness="2" 
            MinWidth="300" 
            CornerRadius="2,10,2,2"
            Background="LightBlue" Padding="12">
        <local:text_block Text="تست" 
                   VerticalAlignment="Center"
                   x:Name="txt_message"></local:text_block>
    </Border>
</StackPanel>
