<Grid x:Class="layer_3.home_unit.login_core"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:layer_3.more_controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:more_controls="clr-namespace:layer_3.more_controls"
             mc:Ignorable="d" 
               HorizontalAlignment="Center" VerticalAlignment="Center" >

    <StackPanel Width="400">

        <local:label_box x:Name="pnl_phone" title_direction="RightToLeft" Margin="5" title="شماره تلفن همراه"    >
            <TextBox BorderThickness="0" ></TextBox>
        </local:label_box>

        <local:label_box x:Name="pnl_pass" Margin="5" title="رمز عبور" 
                       title_direction="RightToLeft">
            <PasswordBox BorderThickness="0" ></PasswordBox>
        </local:label_box>

    </StackPanel>
</Grid>
