<StackPanel x:Class="layer_3.more_controls.message_box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:layer_3.more_controls"
             mc:Ignorable="d" >
    <Border BorderBrush="DodgerBlue" BorderThickness="2,2,2,0"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            Width="120"
            CornerRadius="4,4,0,0" Padding="5" Background="White">
        <ListBox HorizontalContentAlignment="Center" BorderThickness="0">
            <d:ListBoxItem  Content="hello"></d:ListBoxItem>
            <d:ListBoxItem  Content="mohsen"></d:ListBoxItem>
        </ListBox>
    </Border>
    <Border BorderBrush="DodgerBlue" BorderThickness="2" 
            MinWidth="300" d:Height="40"
            CornerRadius="0,10,0,0"
            Background="LightBlue" Padding="5">
        <TextBlock Text="Test" Padding="10"
                   VerticalAlignment="Center"></TextBlock>
    </Border>
</StackPanel>
