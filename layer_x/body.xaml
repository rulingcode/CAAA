<UserControl x:Class="layer_x.body"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:layer_x"
             mc:Ignorable="d">
    <Border Background="LightBlue" Padding="5">
        <StackPanel Background="White" >
            <local:connection x:Name="connection" x:FieldModifier="public"/>
            <Rectangle Height="5" Fill="LightBlue"/>
            <local:hosting x:Name="hosting" x:FieldModifier="public"/>
        </StackPanel>
    </Border>
</UserControl>
