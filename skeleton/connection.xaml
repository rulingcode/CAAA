<Border x:Class="skeleton.connection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:skeleton"
             mc:Ignorable="d" 
        BorderThickness="10"
        BorderBrush="LightBlue"
        CornerRadius="40"
        Margin="20"
        FlowDirection="RightToLeft"
        >
    <Border BorderThickness="5" Padding="40" CornerRadius="40" BorderBrush="LightBlue" Margin="100">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Name="title"  FontSize="20" HorizontalContentAlignment="Center" Content="در حال ایجاد اتصال"/>
            <Label Height="20"/>
            <Label  Name="message" HorizontalContentAlignment="Center" Content="لطفا منتظر بمانید"/>
        </StackPanel>
    </Border>
</Border>
